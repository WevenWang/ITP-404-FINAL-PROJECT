<strong>Name:</strong>
  {{#link-to "celebrity" celebrity.id}}
    {{celebrity.name}}
  {{/link-to}}



<button
  data-test="delete-celebrity"
  type="button"
  id="delete-button"
  onclick={{action "deleteEmail" celebrity}}
>
  <img
    src="https://image.freepik.com/free-icon/trash-bin-symbol_318-10194.jpg"
    alt="trash_img"
  >
</button>


  <StarButton
    @starred={{celebrity.starred}}
    @onClick={{action "star" celebrity}}
  />




  <p>
    <strong>Motto:</strong>
    {{truncate-text celebrity.motto 30}}

  </p>


  <div id="edit-link">
    {{#link-to "edit" celebrity.id}}
      <strong>Edit</strong>
    {{/link-to}}
  </div>






{{yield}}
