      <img src="https://image.freepik.com/free-icon/trash-bin-symbol_318-10194.jpg" alt="trash_img"
      style="height:30px">
    </button>


    <p style="width: 600px; white-space: nowrap; overflow:hidden;
    text-overflow: ellipsis;">{{email.message}}</p>

    {{!-- {{#link-to "email" email.id}}

    {{/link-to}} --}}


