  <strong>From:</strong>
  {{#link-to "email" email.id}}
    {{email.from}}
  {{/link-to}}

<button
  data-test="delete-email"
  type="button"
  id="delete-button"
  onclick={{action "deleteEmail" email}}
>
  <img
    src="https://image.freepik.com/free-icon/trash-bin-symbol_318-10194.jpg"
    alt="trash_img"
  >
</button>


  <StarButton
    @starred={{email.starred}}
    @onClick={{action "star" email}}
  />




  <p>

    {{truncate-text email.message 30}}

  </p>




{{yield}}
